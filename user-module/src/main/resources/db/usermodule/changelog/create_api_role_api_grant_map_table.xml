<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-api_role_api_grant_map-table" author="pveeckhout">
        <createTable tableName="api_role_api_grant_map">
            <column name="role" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="grant" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="api_role_api_grant_map" columnNames="role,grant"/>
        <addForeignKeyConstraint baseTableName="api_role_api_grant_map" baseColumnNames="role" constraintName="fk_api_role_api_grant_map_role" referencedTableName="api_role"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableName="api_role_api_grant_map" baseColumnNames="grant" constraintName="fk_api_role_api_grant_map_grant" referencedTableName="api_grant"
                                 referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>
