<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="b305dffc-efd6-4dd3-8b75-996b5ce0fe19" author="daniel-j-mason">
        <addColumn tableName="system">
            <column name="ed_system_address" type="BIGINT"/>
            <column name="last_updated" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="needs_permit" type="BOOLEAN"/>
            <column name="population" type="BIGINT"/>
            <column name="allegiance_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_systems_allegiance_id" referencedTableName="allegiance" referencedColumnNames="id"/>
            </column>
            <column name="controlling_minor_faction_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_controlling_minor_faction_id" referencedTableName="faction" referencedColumnNames="id"/>
            </column>
            <column name="government_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_government_id" referencedTableName="government" referencedColumnNames="id"/>
            </column>
            <column name="power_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_power_id" referencedTableName="power" referencedColumnNames="id"/>
            </column>
            <column name="power_state_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_power_state_id" referencedTableName="power_state" referencedColumnNames="id"/>
            </column>
            <column name="primary_economy_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_allegiance_id" referencedTableName="economy" referencedColumnNames="id"/>
            </column>
            <column name="reserve_type_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_reserve_type_id" referencedTableName="reserve_type" referencedColumnNames="id"/>
            </column>
            <column name="security_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_security_id" referencedTableName="security" referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
