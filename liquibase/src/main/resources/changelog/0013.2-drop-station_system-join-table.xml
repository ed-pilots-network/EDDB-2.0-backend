<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="a93e40ae-f46f-4a9a-a955-f72ef8209559" author="daniel-j-mason">

        <dropNotNullConstraint columnDataType="bigint" columnName="ed_market_id" tableName="station"/>

        <!-- Add new column for system_id with foreign key constraint -->
        <addColumn tableName="station">
            <column name="system_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_system_id" referencedTableName="system"
                             referencedColumnNames="id"/>
            </column>
        </addColumn>

        <!-- Update station table with data from station_systems table -->
        <sql>
            UPDATE station s
            SET system_id = ss.system_id FROM station_system ss
            WHERE s.id = ss.station_id;
        </sql>

        <!-- Alter column to set it as non-nullable with no default -->
        <addNotNullConstraint tableName="station" columnName="system_id" columnDataType="uuid"/>

        <!-- Remove station_systems table -->
        <dropTable tableName="station_system"/>

    </changeSet>

</databaseChangeLog>
