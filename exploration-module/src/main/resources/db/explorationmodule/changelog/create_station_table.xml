<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_station_table" author="pveeckhout">
        <createTable tableName="station">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="market_id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="distance_from_star" type="double"/>
            <column name="system_id" type="uuid"/>
            <column name="economy" type="varchar(255)"/>
            <column name="government" type="varchar(255)"/>
            <column name="odyssey" type="boolean"/>
            <column name="updated_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="create_station_landingpads_table" author="pveeckhout">
        <createTable tableName="station_landingpads">
            <column name="station_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="pad_size" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="integer"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="station_landingpads" baseColumnNames="station_id"
                                 constraintName="fk_station_landingpads_economy_id"
                                 referencedTableName="station" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create_station_economies_table" author="pveeckhout">
        <createTable tableName="station_economies">
            <column name="station_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="economy_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="double"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="station_economies" baseColumnNames="station_id"
                              constraintName="fk_station_economies_economy_id"
                              referencedTableName="station" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
